.wrapper_with_padding
    #doc_show
        %h1= @doc.title
        %p= simple_format(@doc.content)

        .buttons
            = link_to "Fix Doc", edit_doc_path(@doc),  class: "button"
            = link_to "Delete ", doc_path(@doc), method: :del, data: {confirm: "Are you sure?"}, class: "button"
