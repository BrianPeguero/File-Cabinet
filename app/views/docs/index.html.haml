.wrapper_with_padding
    #docs.clearfix
        - unless @docs.blank?
            - @docs.each do |doc|
                %a{ href: (url_for [doc])}
                    .doc
                        %h1.title= doc.title
                        %h3.content= truncate(doc.content, length:50)
                        %p.date= time_ago_in_words(doc.created_at)
        - else
            %h2 Create Documents
            %p Organizing your life you messy bith!
            %button= link_to "Create Doc", new_doc_path